---
import Layout from '../layouts/Page.astro'
import Container from '../components/Container.astro';
import BlogPostsList from '../components/BlogPostsList.astro';

const posts = (await Astro.glob('./blog/*.{md,mdx}')).sort(
	(a, b) => new Date(b.frontmatter.publishedAt).valueOf() - new Date(a.frontmatter.publishedAt).valueOf()
);

const seo = {
  title: 'Daniel Hill',
  description: 'a simple blog',
}
---

<style>
  .home-hero-text__container {
    clip-path: circle();
  }
  h1 {
    text-align: center;
    font-size: var(--step--5);
  }
</style>

<Layout seo={seo}>
  <picture class="home-hero-text__container">
    <source srcset={"/images/danielhillprofile.webp"} type="image/webp">
    <img class="post-preview__img" src={"/images/danielhillprofile.jpg"} alt={"Daniel Hill"} >
  </picture>
  <Container>
    <BlogPostsList posts={posts}/>
  </Container>
</Layout>

